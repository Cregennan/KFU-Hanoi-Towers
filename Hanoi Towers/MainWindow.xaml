<fw:AcrylicWindow x:Class="Hanoi_Towers.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hanoi_Towers"
        xmlns:fw="clr-namespace:SourceChord.FluentWPF;assembly=FluentWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="{x:Null}">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="39,36,0,0" TextWrapping="Wrap" Text="Ханойские башни: настройка" VerticalAlignment="Top" FontSize="22" Grid.ColumnSpan="2" Foreground="White"/>
        <ComboBox HorizontalAlignment="Left" Margin="39,138,0,0"  VerticalAlignment="Top" Width="120">
            <ComboBoxItem Content="Автоматический" Tag="automatic" IsSelected="True" HorizontalAlignment="Left" Width="118"/>
            <ComboBoxItem Content="Ручной" Tag="manual" HorizontalAlignment="Left" Width="118"/>
        </ComboBox>
        <Label Content="Режим игры" HorizontalAlignment="Left" Margin="39,107,0,0" VerticalAlignment="Top" Width="93" Foreground="White"/>

    </Grid>
</fw:AcrylicWindow>
